module example.com/{{ .Name }}

go 1.25.2

require (
	github.com/spf13/viper v1.18.2
	github.com/rs/zerolog v1.33.0
	{{- if eq .Router "chi" }}
	github.com/go-chi/chi/v5 v5.0.12
	{{- end }}
	{{- if eq .Router "gorilla" }}
	github.com/gorilla/mux v1.8.1
	{{- end }}
	{{- if eq .Router "httprouter" }}
	github.com/julienschmidt/httprouter v1.3.0
	{{- end }}
	{{- if or (hasPrefix .DB "postgres") (hasPrefix .DB "mysql") (hasPrefix .DB "sqlite") }}
	github.com/jmoiron/sqlx v1.4.0
	{{- end }}
	{{- if hasSuffix .DB "-gorm" }}
	gorm.io/gorm v1.25.7
	{{- if hasPrefix .DB "postgres" }}
	gorm.io/driver/postgres v1.5.7{{ end }}
	{{- if hasPrefix .DB "mysql" }}
	gorm.io/driver/mysql v1.5.7{{ end }}
	{{- if hasPrefix .DB "sqlite" }}
	gorm.io/driver/sqlite v1.5.6{{ end }}
	{{- end }}
)
